generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      =  env("MONGO_URI")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String  @unique
  password String
  role     String
  xp   Int     @default(0)
  level    Int     @default(1)
  avatar   String
  age      String
  games    Game[]
}

type Game {
  date DateTime
  points   Int
  rank Int
}
